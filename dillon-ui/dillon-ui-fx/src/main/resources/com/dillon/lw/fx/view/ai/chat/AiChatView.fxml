<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="595.0" prefWidth="792.0" spacing="7.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lw.dillon.admin.fx.view.ai.chat.AiChatView">
   <children>
      <VBox alignment="CENTER" prefHeight="595.0" prefWidth="280.0" spacing="10.0">
         <children>
            <Button fx:id="createConversationBut" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="新建会话" />
            <TextField fx:id="conversationSearchTextField" />
            <ListView fx:id="conversationListView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="roleResBut" mnemonicParsing="false" text="角色仓库" />
                  <Button fx:id="clearBut" mnemonicParsing="false" text="清空未置顶对话" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label fx:id="sessionLabel" maxWidth="1.7976931348623157E308" text="Label" HBox.hgrow="ALWAYS" />
                  <Button fx:id="modelBut" mnemonicParsing="false" text="Button" />
                  <Button fx:id="clearSessionBut" mnemonicParsing="false" text="Button" />
                  <Button mnemonicParsing="false" text="Button" />
                  <Button mnemonicParsing="false" text="Button" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <ListView fx:id="messageListView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" style="-fx-border-color: #6e6e6e6e;">
               <children>
                  <TextArea fx:id="promptInputArea" prefHeight="220.0" prefWidth="575.0" style="-fx-border-color: transparent; -fx-faint-focus-color: transparent; -fx-focus-color: transparent; -fx-border-color: transparent; -fx-border-width: 0; -fx-background-insets: 0; -fx-background-radius: 0;" VBox.vgrow="ALWAYS" />
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <ToggleButton fx:id="contextBut" mnemonicParsing="false" text="上下文" />
                        <Region maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                        <Button fx:id="sendBut" mnemonicParsing="false" text="发送" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children></VBox>
   </children>
</HBox>
